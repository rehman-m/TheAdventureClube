{% extends 'base.html.twig' %}

{% block title %}Hello AdventureController!{% endblock %}

{% block body %}
    <div>

        <div class="header bg-dark p-3 d-flex justify-content-between">
            <div class="home   ">
                <a href="" class="text-white text-decoration-none">Home</a>
            </div>
            <div class="inloggen  ">
                <a href="{{ path('app_logout')  }}" class="text-white text-decoration-none ">Uitloggen</a>
            </div>

        </div>

        <div class="d-flex justify-content-center ">
            <div>
                <h1> Welkom {{ app.user.fname }} !</h1>

                <p>Dit is de member pagina .</p>
            </div>


        </div>

    </div>
    <div>
        <div class="text-center mt-5">
            <h1>Mijn Verhalen</h1>
        </div>

        <div class="w-100 p-5">
            <table class="table">
                <thead>
                <tr>

                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Date</th>
                </tr>
                </thead>
                <tbody>
                <tr>
{% for s in story %}
                    <td>{{s.title }}</td>
                    <td>{{ s.description }}</td>
                    <td>{{s.date|date('d/m/y')}}</td>
                    <td><button class="btn btn-warning">Update</button></td>
                </tr>
                <tr>
                    <td>Tile</td>

                    <td>Description</td>
                    <td>Date</td>
                    <td><button class="btn btn-warning">Update</button></td>

                </tr>

                </tbody>
            </table>
            <button class="btn btn-success">Add</button>
        </div>
{% endfor %}


    </div>

{% endblock %}